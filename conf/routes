# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                    controllers.Application.index()

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file        controllers.Assets.versioned(path="/public", file: Asset)

# Users
GET         /api/users           controllers.UserController.getAll()
POST        /api/users           controllers.UserController.post()
POST        /api/users/login     controllers.UserController.login()

# Braintree
GET         /clientToken         controllers.Application.payButton(customerId: String)
POST        /paymentMethods      controllers.Application.paymentMethods